generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  passwordHash  String
  role          UserRole  @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  accounts      Account[]
  comments      Comment[]
  favorites     PostFavorite[]
  likes         PostLike[]
  postViews     PostView[]
  profile       UserProfile?
  sessions      Session[]
  moments       Moment[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

/// This model contains an expression index which requires additional setup for migrations. Visit https://pris.ly/d/expression-indexes for more info.
model Post {
  id          String     @id @default(cuid())
  title       String
  slug        String     @unique
  summary     String
  content     String
  status      PostStatus @default(DRAFT)
  publishedAt DateTime?
  tags        String[]   @default([])
  categoryId  String?
  coverImage  String?
  readingTime Int        @default(0)
  toc         Json?
  likesCount  Int        @default(0)
  viewsCount  Int        @default(0)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  category    ArticleCategory? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  comments    Comment[]
  favorites   PostFavorite[]
  likes       PostLike[]
  tagLinks    PostTag[]
  views       PostView[]

  @@index([status, publishedAt(sort: Desc)])
  @@index([createdAt(sort: Desc)])
  @@index([categoryId])
}

model ArticleCategory {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  posts     Post[]

  @@index([order(sort: Asc)])
}

model Tag {
  id        String    @id @default(cuid())
  name      String
  slug      String    @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  postLinks PostTag[]
}

model PostTag {
  postId     String
  tagId      String
  assignedAt DateTime @default(now())
  post       Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  tag        Tag      @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([postId, tagId])
  @@index([tagId])
}

model ImageAsset {
  id          String   @id @default(cuid())
  url         String
  provider    String
  width       Int?
  height      Int?
  blurDataURL String?
  createdAt   DateTime @default(now())
}

model Comment {
  id        String        @id @default(cuid())
  postId    String?
  momentId  String?
  userId    String
  parentId  String?
  content   String
  status    CommentStatus @default(VISIBLE)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  post      Post?         @relation(fields: [postId], references: [id], onDelete: Cascade)
  moment    Moment?       @relation(fields: [momentId], references: [id], onDelete: Cascade)
  user      User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  parent    Comment?      @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies   Comment[]     @relation("CommentReplies")

  @@index([postId, status, createdAt(sort: Desc)])
  @@index([parentId])
}

model auth_devices {
  user_id       String
  device_id     String
  user_agent    String?
  last_ip       String?
  first_seen_at DateTime @default(now()) @db.Timestamptz(6)
  last_seen_at  DateTime @default(now()) @db.Timestamptz(6)

  @@id([user_id, device_id])
}

model auth_events {
  id         String   @id
  event_type String
  success    Boolean
  user_id    String?
  email      String?
  ip         String?
  user_agent String?
  device_id  String?
  detail     Json?
  created_at DateTime @default(now()) @db.Timestamptz(6)
}

model donation_records {
  id             String    @id
  name           String
  email          String?
  amount         Decimal   @db.Decimal(10, 2)
  message        String?
  payment_method String    @default("WECHAT")
  status         String    @default("PENDING")
  confirmed_at   DateTime? @db.Timestamptz(6)
  created_at     DateTime  @default(now()) @db.Timestamptz(6)
  updated_at     DateTime  @default(now()) @db.Timestamptz(6)

  @@index([status, created_at(sort: Desc)], map: "idx_donation_records_status_created_at")
}

model friend_link_entries {
  id          String    @id
  avatar_url  String
  name        String
  email       String
  site_name   String
  site_url    String
  description String
  status      String    @default("PENDING")
  review_note String?
  reviewed_at DateTime? @db.Timestamptz(6)
  created_at  DateTime  @default(now()) @db.Timestamptz(6)
  updated_at  DateTime  @default(now()) @db.Timestamptz(6)

  @@index([status, created_at(sort: Desc)], map: "idx_friend_link_entries_status_created_at")
}

model message_board_entries {
  id         String   @id
  name       String
  email      String?
  content    String
  status     String   @default("VISIBLE")
  ip         String?
  user_id    String?
  created_at DateTime @default(now()) @db.Timestamptz(6)
  updated_at DateTime @default(now()) @db.Timestamptz(6)

  @@index([status, created_at(sort: Desc)], map: "idx_message_board_entries_status_created_at")
}

model rate_limit_buckets {
  key          String   @id
  count        Int
  window_start DateTime @db.Timestamptz(6)
  updated_at   DateTime @default(now()) @db.Timestamptz(6)
}

model security_alerts {
  id         String   @id
  alert_type String
  severity   String
  user_id    String?
  email      String?
  message    String
  meta       Json?
  resolved   Boolean  @default(false)
  created_at DateTime @default(now()) @db.Timestamptz(6)
}

model UserProfile {
  userId     String   @id
  bio        String?
  githubUrl  String?
  websiteUrl String?
  updatedAt  DateTime @updatedAt
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model PostFavorite {
  id        String   @id @default(cuid())
  userId    String
  postId    String
  createdAt DateTime @default(now())
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, postId])
  @@index([userId, createdAt(sort: Desc)])
  @@index([postId])
}

model PostLike {
  id        String   @id @default(cuid())
  userId    String
  postId    String
  createdAt DateTime @default(now())
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, postId])
  @@index([userId, createdAt(sort: Desc)])
  @@index([postId])
}

model PostView {
  id        String   @id @default(cuid())
  userId    String
  postId    String
  viewedAt  DateTime @default(now())
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, viewedAt(sort: Desc)])
  @@index([postId])
}

model Project {
  id          String   @id @default(cuid())
  order       Int
  title       String?
  subtitle    String?
  role        String?
  period      String?
  summary     String?
  highlights  String[] @default([])
  techStack   String[] @default([])
  githubUrl   String?
  demoUrl     String?
  sourceRepo  String?
  slug        String?  @unique
  content     String?  @db.Text
  likesCount  Int          @default(0)
  viewsCount  Int          @default(0)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  likes       ProjectLike[]
}

model ProjectLike {
  id        String   @id @default(cuid())
  projectId String
  viewerId  String
  userId    String?
  createdAt DateTime @default(now())
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@unique([projectId, viewerId])
  @@index([projectId])
}

model site_settings {
  key        String   @id
  value      String
  updated_at DateTime @default(now()) @db.Timestamptz(6)
}

enum UserRole {
  ADMIN
  USER
}

enum PostStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum CommentStatus {
  VISIBLE
  HIDDEN
  DELETED
}

model Moment {
  id        String    @id @default(cuid())
  content   String
  images    Json?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  comments  Comment[]
}
